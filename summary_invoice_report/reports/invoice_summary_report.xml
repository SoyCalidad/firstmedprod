<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="invoice_summary_report_pdf">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                        <div class="page">
                            <h2>
                                <span t-if="o.invoice_status == 'all'">Todos los Comprobantes</span>
                                <span t-if="o.invoice_status == 'paid'">Comprobantes Pagados</span>
                                <span t-if="o.invoice_status == 'un_paid'">Comprobantes No Pagados</span>
                            </h2>
                            <div id="informations" class="row mt32 mb32">
                                <div class="col-2" name="invoice_date">
                                    <strong>De:</strong>
                                    <p class="m-0" t-field="o.from_date"/>
                                </div>
                                <div class="col-2">
                                    <strong>Al:</strong>
                                    <p class="m-0" t-field="o.to_date"/>
                                </div>
                                <div class="col-2" t-if="o.partner_id"
                                     name="customer_code">
                                    <strong>Nombre del Cliente:</strong>
                                    <p class="m-0" t-field="o.partner_id.name"/>
                                </div>
                            </div>
                            <table class="table table-sm o_main_table" name="invoice_line_table">
                                <thead>
                                    <tr>
                                        <th name="date" class="text-left"><span>Fecha</span></th>
                                        <th name="date" class="text-left"><span>Hora</span></th>
                                        <th name="type" class="text-left"><span>Tipo de Dcto</span></th>
                                        <th name="invoice_number" class="text-left"><span>Número del Comprobante</span></th>
                                        <th name="discount" class="text-left"><span>Dcto de cliente</span></th>
                                        <th name="customer" class="text-left"><span>Cliente</span></th>
                                        <th name="import" class="text-left"><span>Importe</span> </th>
                                        <th name="import" class="text-left"><span>Efectivo</span> </th>
                                        <th name="credit" class="text-left"><span>Crédito</span></th>
                                        <th name="bank" class="text-left"><span>Banco</span></th>
                                        <th name="wayPay" class="text-left"><span>Forma de pago</span></th>
                                        <th name="numberMove" class="text-left"><span>Nro.Movim.</span></th>
                                        <th name="datePage" class="text-left"><span>Fecha de pago</span></th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="invoices" t-value="o.invoice_objs"/>
                                    <t t-foreach="invoices" t-as="invoice">
                                        <tr class="bg-200 font-weight-bold">
                                            <td name="account_invoice_line_name"><span t-esc="invoice.invoice_date.strftime('%d-%b')"/> </td>
                                            <td name="account_invoice_line_name"><span t-esc="context_timestamp(invoice.create_date).time().strftime('%H:%M:%S')"/></td>
                                            <td name="account_invoice_line_name"><span t-field="invoice.journal_id.l10n_latam_document_type_id.code" t-options="{'widget': 'text'}"/>-
                                                <span t-field="invoice.journal_id.l10n_latam_document_type_id.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                            <td name="account_invoice_line_name"><span t-field="invoice.name" t-options="{'widget': 'text'}"/></td>
                                            <td name="account_invoice_line_name"><span t-field="invoice.partner_id.vat" t-options="{'widget': 'text'}"/></td>
                                            <td name="account_invoice_line_name"><span t-field="invoice.partner_id.name" t-options="{'widget': 'text'}"/></td>  
                                            <td name="account_invoice_line_name"><span t-field="invoice.amount_total" t-options="{'widget': 'text'}"/></td>
                                            <t t-if="invoice.payment_state != 'not_paid'">
                                                <td name="account_invoice_line_name"><span t-esc="o.return_payments(invoice.id)[1]"/></td>
                                                <td name="account_invoice_line_name">0</td>
                                                <td name="account_invoice_line_name"><span t-esc="o.return_payments(invoice.id)[2]"/></td>
                                                <td name="account_invoice_line_name"><span t-esc="o.return_payments(invoice.id)[3]"/></td>
                                                <td name="account_invoice_line_name"><span t-esc="o.return_payments(invoice.id)[5]"/></td>
                                                <td name="account_invoice_line_name"><span t-esc="o.return_payments(invoice.id)[4]"/></td>
                                            </t>
                                            <t t-else="">
                                                <td name="account_invoice_line_name">0</td>
                                                <td name="account_invoice_line_name"><span t-field="invoice.amount_total" t-options="{'widget': 'text'}"/></td>
                                                <td name="account_invoice_line_name">0</td>
                                                <td name="account_invoice_line_name"></td>
                                                <td name="account_invoice_line_name">//</td>
                                                <td name="account_invoice_line_name">//</td>
                                            </t>
                                            
                                        </tr>

                                    </t>
                                </tbody>
                            </table>
                            <div class="clearfix">
                                <div id="total" class="row">
                                    <div t-attf-class="#{'col-6'} ml-auto">
                                        <table class="table table-sm" style="page-break-inside: avoid;">
                                            <tr class="border-black o_total">
                                                <td><strong>Total</strong></td>
                                                <td class="text-right">
                                                    <span class="text-nowrap" t-field="o.amount_total_debit"/>
                                                </td>
                                                <td class="text-right">
                                                    <span class="text-nowrap" t-field="o.amount_total_debit_cash"/>
                                                </td>
                                                <td class="text-right">
                                                    <span class="text-nowrap" t-field="o.amount_total_credit"/>
                                                </td>
                                                <td class="text-right">
                                                    <span class="text-nowrap" t-field="o.amount_total_debit_bank"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
        </template>
        <template id="invoice_summary_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="summary_invoice_report.invoice_summary_report_pdf"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
